@page
@model BoutiqueManagement.Pages.Online.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Online Shopping Orders</h1>

<p>
    <a asp-page="Create">Online Orders Add Here</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OnlineOrder[0].NewOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnlineOrder[0].Purchaser_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnlineOrder[0].Delivery_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnlineOrder[0].Estimate_Delivery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnlineOrder[0].Service_ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OnlineOrder) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Purchaser_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delivery_Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estimate_Delivery)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service_ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OnlineOrder_ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OnlineOrder_ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OnlineOrder_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
